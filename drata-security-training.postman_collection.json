{
  "info": {
    "_postman_id": "d6e1b1e2-8c2a-4b7a-9e2e-drata-example-2025",
    "name": "Drata Security Training Workflow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Personnel",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{drata_api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "https://api.drata.com/api/personnel",
          "protocol": "https",
          "host": ["api", "drata", "com"],
          "path": ["api", "personnel"]
        }
      }
    },
    {
      "name": "Upload Evidence for User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{drata_api_key}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "multipart/form-data",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "personnelId",
              "value": "<PERSONNEL_ID>",
              "type": "text"
            },
            {
              "key": "controlId",
              "value": "<CONTROL_ID>",
              "type": "text"
            },
            {
              "key": "file",
              "type": "file",
              "src": ""
            }
          ]
        },
        "url": {
          "raw": "https://api.drata.com/api/evidence",
          "protocol": "https",
          "host": ["api", "drata", "com"],
          "path": ["api", "evidence"]
        }
      }
    },
    {
      "name": "Run Autopilot Test 43",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{drata_api_key}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "https://api.drata.com/api/autopilot/tests/43/run",
          "protocol": "https",
          "host": ["api", "drata", "com"],
          "path": ["api", "autopilot", "tests", "43", "run"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "drata_api_key",
      "value": "YOUR_DRATA_API_KEY"
    }
  ]
}
